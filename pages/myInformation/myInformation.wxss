/* pages/myInformation/myInformation.wxss */
page{
  background-color: rgb(247,247,247);
}
.items{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: auto;
  width: 650rpx;
  padding: 20rpx 50rpx;
  border-bottom: 20rpx solid rgb(234,234,234);
  font-size: 30rpx;
  box-shadow: 0 0 10px #DDD;
}
img{
  width:200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 30rpx;
  border-radius: 50%;
}
.userinfo {
  width: 100%;
  height: 400rpx;
  padding:40rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(rgb(1,115,222), rgb(78,169,245));
  color:white;
}

button{
  width:400rpx;
  background-color: #0173DE;
  color:white;
  opacity: 0.7;
  box-shadow: 0 0 10px #DDD;
  font-size:34rpx;
}
.button-hover {
  
  color:white;
  opacity: 1;
  background-color: #0173DE;
}
.but{
  margin-top: 50rpx;
}